<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/overslayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <Button
            android:id="@+id/overstext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/button_round_gray"
            android:text="Overs"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/overstext">



            <Button
                android:id="@+id/first"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_round_white"
                android:text="0" />

            <Button
                android:id="@+id/second"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_round_green"
                android:text="0" />

            <Button
                android:id="@+id/third"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_round_white"
                android:text="0" />

            <Button
                android:id="@+id/fourth"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_round_green"
                android:text="0" />

            <Button
                android:id="@+id/fifth"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_round_white"
                android:text="0" />

            <Button
                android:id="@+id/sixth"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_round_green"
                android:text="0" />

            <Button
                android:id="@+id/seventh"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_round_green"
                android:text="0"
                android:visibility="invisible" />

            <Button
                android:id="@+id/eigth"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_round_green"
                android:text="0"
                android:visibility="invisible" />

            <Button
                android:id="@+id/nineth"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_round_green"
                android:text="0"
                android:visibility="invisible" />

            <Button
                android:id="@+id/tenth"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_round_green"
                android:text="0"
                android:visibility="invisible" />


        </LinearLayout>


        <TextView
            android:id="@+id/runscount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:text="Runs 0"
            android:textColor="@color/white" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>