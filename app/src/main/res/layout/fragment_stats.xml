<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.LiveMatchFragment">

<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/button_blur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_weight="1"
                android:layout_marginTop="13dp"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/lionright"
                />


            <TextView
                android:layout_weight="1"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Head-to-Head"
                android:padding="15dp"
                android:textAlignment="center"
                android:textSize="30dp" />

            <ImageView
                android:layout_weight="1"
                android:layout_marginTop="13dp"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/lion"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/team1logo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/ic_launcher" />

            <ImageView
                android:id="@+id/team2logo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/ic_launcher" />

        </LinearLayout>

        <TextView
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="20dp"
            android:alpha="0.5"
            android:background="@color/black"
            android:text="" />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/green"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Wins"
                android:textSize="20dp" />

            <TextView
                android:textColor="@color/info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Played"
                android:textAlignment="center"
                android:textSize="20dp" />

            <TextView
                android:textColor="@color/green"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Wins"
                android:textAlignment="textEnd"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/team1wins"
                android:textColor="@color/white"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:text=" "
                android:textSize="20dp" />

            <ProgressBar
                android:progressTint="#808280"
                android:secondaryProgressTint="@color/red"
                android:secondaryProgress="100"
                android:id="@+id/team1Progress"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:clickable="false"
                android:max="100"
                android:progress="100" />


            <TextView
                android:id="@+id/totalplayed"
                android:textColor="@color/white"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:text=" "
                android:textAlignment="center"
                android:textSize="20dp" />

            <ProgressBar
                android:progressTint="@color/green"
                android:id="@+id/team2Progress"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:clickable="false"
                android:max="100"
                android:progress="0" />

            <TextView
                android:id="@+id/team2wins"
                android:textColor="@color/white"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:text=" "
                android:textAlignment="textEnd"
                android:textSize="20dp" />

        </LinearLayout>

        <TextView
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="20dp"
            android:alpha="0.5"
            android:background="@color/black"
            android:text="" />

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/green"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:text="Drawn"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/drawn"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text=" "
                android:layout_marginLeft="15dp"
                android:textAlignment="textStart"
                android:textSize="20dp" />



        </LinearLayout>

        <TextView
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="20dp"
            android:alpha="0.5"
            android:background="@color/black"
            android:text="" />


        <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_id3"></com.google.android.gms.ads.AdView>






        <TextView
            android:paddingStart="10dp"
            android:background="@drawable/background_blur_square"
            android:layout_marginTop="50dp"
            android:textColor="@color/yellow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Key Players"
            android:textSize="20dp" />

        <TextView
            android:layout_marginTop="15dp"
            android:textColor="@color/white"
            android:id="@+id/keyplayers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text=" "
            android:textSize="18dp" />

        <TextView
            android:paddingStart="10dp"
            android:background="@drawable/background_blur_square"
            android:layout_marginTop="20dp"
            android:textColor="@color/yellow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Predicted XI"
            android:textSize="20dp" />

        <TextView
            android:layout_marginTop="15dp"
            android:textColor="@color/white"
            android:id="@+id/predictedxi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text=" "
            android:textSize="15dp" />

        <TextView
            android:paddingStart="10dp"
            android:background="@drawable/background_blur_square"
            android:layout_marginTop="20dp"
            android:textColor="@color/yellow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pitch Details/Analysis"
            android:textSize="20dp" />

        <TextView
            android:layout_marginTop="15dp"
            android:textColor="@color/white"
            android:id="@+id/pitchdetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text=" "
            android:textSize="15dp" />


        <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_id4"></com.google.android.gms.ads.AdView>



        <TextView
            android:paddingStart="10dp"
            android:background="@drawable/background_blur_square"
            android:layout_marginTop="20dp"
            android:textColor="@color/yellow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Team News"
            android:textSize="20dp" />

        <TextView
            android:layout_marginTop="15dp"
            android:textColor="@color/white"
            android:id="@+id/teamnews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text=" "
            android:textSize="15dp" />

        <TextView
            android:paddingStart="10dp"
            android:background="@drawable/background_blur_square"
            android:layout_marginTop="20dp"
            android:textColor="@color/yellow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Others"
            android:textSize="20dp" />

        <TextView
            android:layout_marginTop="15dp"
            android:textColor="@color/white"
            android:id="@+id/others"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text=" "
            android:textSize="15dp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>

</android.support.v4.widget.NestedScrollView>